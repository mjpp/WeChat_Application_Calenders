/**index.wxss**/
@import '../../dist/css/icon.wxss';  
page {  
  background-color: #2a8cef;  
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(#FFF), to(#FFF));  
  display: flex;  
  flex-direction: column;  
  width: 100%;  
  height: 100%;  
  flex-wrap: nowrap;  
  justify-content: flex-start;  
  align-items: stretch;  
  font-size: 11pt;  
  font-weight: bold;
}  
  
.box {  
  display: block;  
  margin: 10px;   
}  
  
.box-flex {  
  display: -webkit-box;  
  display: -webkit-flex;  
  display: flex;  
  flex-wrap: wrap;  
  letter-spacing: 1px;
}  
  
.flex-item {  
  flex-flow: nowrap;  
  flex-grow: 1;  
  flex-shrink: 1;  
  width: 14.2%;  
}  
  
.item-content {  
  margin: 5px;   
  text-align: center;  
  background-color: #FFF;  
  height: 2rem;  
  line-height: 2rem;  
  color: #1f8ea7;  
  border-color: #1f8ea7;
  border-width: 1.5px;
  border-style: solid;
  border-radius: 4px;
  
}  

.weekday {
  background-color: #1f8ea7;
  color: #fff;
  margin-top: 4%;
  margin-left: 4%;
  height: 92%;
  width: 92.5%;
  border-radius: 4px;
}

.currentDate {
  margin: 5%;   
  text-align: center;  
  background-color: #FFF;  
  height: 2rem;  
  line-height: 2rem;  
  color: #1f8ea7;  
  letter-spacing: 2.5px;
}

.left-key {
  margin-left: 20%
}

.right-key {
  margin-right: 20%
}

.not-this-month {
  border-color: #dbdbdb;
  color: #dbdbdb;
}

.add-button {
  height: 100px;
  border-color: #FFF;
  background-color: #FFF;
  border-width: 0.1px;
  border-style: solid;
  border-radius: 4px;
}

.add-button-img {
  height: inherit;
  width:100%;
}

.task {
  height: 50px;
  text-align: left;
}

.task-img {
  height: inherit;
  width:100%;
}

.task-content {
  border-color: #ee405d;
  border-width: 1.2px;
  border-style: solid;
  border-radius: 3px;
  margin: 1em;
  margin-left: 20%;
  width: 60%;
  height: inherit;
}

.task-content-day {
  color: #ee405d;
  margin-left: 1em; 
  letter-spacing: 1.2px;
  font-size: 10pt;
  text-align: center;
}

